pipeline {
    agent any    
    stages {            
                  
       
            stage ('Start Zalenium'){
                steps{
                    bat 'docker-compose up'
                }
            }
            stage ('Run Tests'){
                steps{
                    bat 'mvn test'
                }
            }
            stage ('Stop Zalenium'){
                steps{
                    bat 'docker-compose down'
                }
            }
    }
}