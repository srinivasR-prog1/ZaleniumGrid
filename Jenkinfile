pipeline {
    agent any    
    stages {
                
            stage('Checkout Code'){
                steps{				
				git url: 'https://github.com/srinivasR-prog1/inetBankingV1.git'
                    
                }
            }                  
       
            stage ('Start Zalenium'){
                steps{
                    bat 'docker-compose up'
                }
            }
            stage ('Run Tests'){
                steps{
                    bat 'mvn test'
                }
            }
            stage ('Stop Zalenium'){
                steps{
                    bat 'docker-compose down'
                }
            }
    }
}